@page
@model ChristmasFrontend.Pages.IndexModel
@{
    ViewData["Title"] = "Christmas Market Home";
}
<div class="d-flex align-items-center mb-4">
    <img src="~/images/santa.png" alt="Santa"
         style="height:90px; margin-right:10px; cursor:pointer;"
         onclick="showChristmasMessage()"  />
    <h1 class="mb-0">@ViewData["Title"]</h1>
</div>
<div class="container mt-4">

    <!-- 검색 및 날짜 필터 -->
    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" class="d-flex">
                <input type="text" name="keyword" class="form-control me-2" placeholder="Search on description" value="@Request.Query["keyword"]" />
                <button class="btn btn-outline-secondary">🔎 Search</button>
            </form>
        </div>
        <div class="col-md-6">
            <form method="get" class="d-flex">
                <input type="date" name="selectedDate" class="form-control me-2" 
                       value="@(Model.SelectedDate.HasValue ? Model.SelectedDate.Value.ToString("yyyy-MM-dd") : "")" />
                <button class="btn btn-outline-secondary">📆 Choose</button>
            </form>
        </div>
    </div>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-page="/Markets/Create" class="btn btn-add">Add New Market</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Location ID</th>
                    <th>Description</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>

            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach(var item in Model.MarketDetails)
                {
                    <div class="col d-flex">
                        <div class="card shadow-sm p-3 flex-fill">
                            <div class="card-body d-flex flex-column">
                                <h4 class="card-title">🎄 @item.Market.Name</h4>
                                <p class="card-text">@item.Market.Description</p>
                                <p class="card-text">📍 @item.Location.Address, @item.Location.Country</p>
                                <p class="card-text mt-auto"><small>@item.Market.StartDate.ToShortDateString() - @item.Market.EndDate.ToShortDateString()</small></p>
                                <a asp-page="/Markets/Details" asp-route-id="@item.Market.Id" class="btn btn-custom btn-sm mt-2">Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </table>
    </div>
</div>
<script>
    function showChristmasMessage() {
        alert("Ho Ho Ho!\nMerry Christmas! 🎅🎁");
    }
</script>